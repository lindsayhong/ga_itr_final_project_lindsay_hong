<div id="container">
	<h1>Hole #<%= @hole.hole_number %></h1>

	<%= form_for [@round, @hole] do |form| %>
		<ul>
			<% @hole.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>

		<table class="Hole">
			
			<tr>	
				<td align="right"><%= form.label :fairway, "Fairway:" %></td>
				<td align="left"><%= form.select(:fairway, options_for_select(@yes_no_na_options, @hole.fairway)) %></td>
			</tr>

			<tr>	
				<td align="right"><%= form.label :green, "Green:" %></td>
				<td align="left"><%= form.select(:green, options_for_select(@green_options, @hole.green)) %></td>
			</tr>

			<tr>	
				<td align="right"><%= form.label :chips, "Chips/Pitches:" %></td>
				<td align="left"><%= form.select(:chips, options_for_select(@chip_putt_options, @hole.chips)) %></td>
			</tr>

			<tr>	
				<td align="right"><%= form.label :sand, "Sand:" %></td>
				<td align="left"><%= form.select(:sand, options_for_select(@chip_putt_options, @hole.sand)) %></td>
			</tr>

			<tr>	
				<td align="right"><%= form.label :putts, "Putts:" %></td>
				<td align="left"><%= form.select(:putts, options_for_select(@chip_putt_options, @hole.putts)) %></td>
			</tr>		

			<tr>	
				<td align="right"><%= form.label :up_and_down, "Up and Down:" %></td>
				<td align="left"><%= form.select(:up_and_down, options_for_select(@yes_no_na_options, @hole.up_and_down)) %></td>
			</tr>		<tr>	
				<td align="right"><%= form.label :sandy, "Sandy:" %></td>
				<td align="left"><%= form.select(:sandy, options_for_select(@yes_no_na_options, @hole.sandy)) %></td>
			</tr>

			<tr>	
				<td align="right"><%= form.label :score, "Score:" %></td>
				<td align="left"><%= form.select(:score, options_for_select(@score_options, @hole.score)) %></td>
			</tr>

			<tr>	
				<td align="right"><%= form.label :over_under, "Over/Under Par:" %></td>
				<td align="left"><%= form.select(:over_under, options_for_select(@over_under_options, @hole.over_under)) %></td>
			</tr>
		
			<tr>	
				<td></td>
				<td align="right"><%= form.submit "Update Hole" %></td>
			</tr>
			
			<tr>
				<td></td>
				<td align="right" class="button"><%= link_to "Cancel", round_path(@round.id), class: "cancel"%></td>
			</tr>	
		</table>
	<% end %>
</div>